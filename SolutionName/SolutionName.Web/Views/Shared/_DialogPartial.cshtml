@{ 
    var dialogModel = TempData.Get<DialogViewModel>("Dialog");
}

@if (dialogModel != null)
{
    string alertType = "alert-primary";
    switch (dialogModel.DialogType)
    {
        case DialogType.Success: alertType = "alert-success"; break;
        case DialogType.Info: alertType = "alert-info"; break;
        case DialogType.Warning: alertType = "alert-warning"; break;
        case DialogType.Error: alertType = "alert-danger"; break;
    }

    <div class="alert @alertType alert-dismissible fade show" role="alert">
        <h4 class="alert-heading">@dialogModel.Title</h4>
        <p>@dialogModel.Message</p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}